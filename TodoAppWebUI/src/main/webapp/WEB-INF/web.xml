<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
        version="3.0">
	<display-name>TodoList WebApp</display-name>
	
	<!-- Task Creation start -->
	
	<servlet>
		<servlet-name>task-creation</servlet-name>
		<servlet-class>uk.gov.hmcts.todolist.webapp.CreateTodoList</servlet-class>
	</servlet>
	
	<!-- Task Creation end -->
	
	
	<!-- Task Creation start -->
	<servlet-mapping>
		<servlet-name>task-creation</servlet-name>
		<url-pattern>/task-creation</url-pattern>
	</servlet-mapping>	
	

	<!-- Task Creation end -->
	
	
	<filter>
	    <filter-name>sessionExpiryFilter</filter-name>
	    <filter-class>uk.gov.hmcts.todolist.webapp.SessionExpiryFilter</filter-class>
	</filter>
	<filter-mapping>
	    <filter-name>sessionExpiryFilter</filter-name>
	    <url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<welcome-file-list>
	    <welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
